{
  "compilerOptions": {
    "tsBuildInfoFile": "../node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "incremental": true,
    "composite": true,
    "target": "ES2023",
    "lib": [
      "ES2023"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    /* Types for Node/Vitest/Vite configs */
    "types": [
      "node",
      "vitest/globals",
      "vitest",
      "vite/client"
    ]
  },
  "include": [
    "./vite.config.ts",
    "./vitest.config.ts"
  ],
  "exclude": [
    "../node_modules",
    "../dist"
  ]
}